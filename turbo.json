{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "dependsOn": ["^clean"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": [
        "build",
        "test:format",
        "test:lint",
        "test:typecheck",
        "test:unit"
      ]
    },
    "test:lint": {
      "dependsOn": ["^test:lint"]
    },
    "test:typecheck": {
      "dependsOn": ["^test:typecheck"]
    },
    "test:unit": {
      "dependsOn": ["^test:unit"]
    },
    "test:format": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
